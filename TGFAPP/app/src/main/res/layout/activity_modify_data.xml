<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ModifyData"
    android:background="@drawable/background"
    >

    <TextView
        android:textStyle="bold"
        android:id="@+id/contractText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="5dp"
        android:fontFamily="@font/playfair"
        android:text="Selected Contract:"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="28dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:textStyle="bold"
        android:id="@+id/contractNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/contractText"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/playfair"
        android:text=""
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20dp"
        tools:ignore="MissingConstraints" />


    <ImageButton
        android:id="@+id/backOptions6"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/ic_baseline_arrow_back_24" />

    <TextView
        android:textStyle="bold"
        android:id="@+id/DataText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/contractNum"
        android:layout_marginLeft="15dp"
        android:fontFamily="@font/playfair"
        android:text="SmartContract Data:"
        android:textAlignment="center"
        android:textColor="#DCDCDC"
        android:textSize="20dp"

        />

    <TextView
        android:textStyle="bold"
        android:id="@+id/lastData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/changeData"
        android:layout_below="@id/DataText"
        android:layout_marginLeft="15dp"
        android:fontFamily="@font/playfair"
        android:text="hhhhhhh"
        android:textColor="#DCDCDC"
        android:textSize="18dp" />

    <TextView
        android:textStyle="bold"
        android:id="@+id/changeData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/editData"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/playfair"
        android:text="Change data:"
        android:textAlignment="center"
        android:textColor="#DCDCDC"
        android:textSize="25dp"

        />

    <EditText
        android:id="@+id/editData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:ems="10"
        android:fontFamily="@font/playfair"
        android:hint="Write new data"
        android:inputType="numberSigned"
        android:textAlignment="center"
        android:textColor="@color/white" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/editData"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:text="Set Data"
        android:id="@+id/modifyData"
        />

</RelativeLayout>